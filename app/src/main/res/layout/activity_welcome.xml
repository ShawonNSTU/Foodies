<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.shawon.foodies.WelcomeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/logo_eat_it"
            android:layout_width="200dp"
            android:layout_height="200dp" />
        <TextView
            android:gravity="center"
            android:id="@+id/welcome_screen_text"
            android:textColor="#ffffff"
            android:text="@string/welcome_screen_text_resources"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <info.hoang8f.widget.FButton
            android:id="@+id/sign_up_button"
            android:layout_weight="1"
            android:fontFamily="serif"
            android:layout_width="0dp"
            android:textColor="#ffffff"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            app:buttonColor="@color/colorAccent"
            android:text="Sign Up"
            app:shadowColor="#000000"
            android:textAllCaps="false"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            app:cornerRadius="4dp"/>

        <info.hoang8f.widget.FButton
            android:id="@+id/sign_in_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textColor="#ffffff"
            android:layout_margin="8dp"
            android:layout_height="wrap_content"
            app:buttonColor="@color/colorSigninButton"
            android:text="Sign In"
            android:textAllCaps="false"
            app:shadowColor="#000000"
            android:fontFamily="serif"
            app:shadowEnabled="true"
            app:shadowHeight="5dp"
            app:cornerRadius="4dp"/>

    </LinearLayout>

</RelativeLayout>