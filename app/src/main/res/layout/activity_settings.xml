<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shawon.foodies.SettingsActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#20B2AA"
        android:elevation="7dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="15dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:src="@drawable/profile_image"
            />

        <RelativeLayout
            android:layout_marginTop="6dp"
            android:id="@+id/relative_layout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Emptiness Shawon"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <TextView
                android:layout_below="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Foodies user"
                android:textSize="12sp"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line_no_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_below="@+id/rl2"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:id="@+id/rl1"
        android:layout_below="@+id/line_no_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
       >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_edit_black_24dp"
            android:tint="@color/colorStatusBar1"
            />

    <RelativeLayout
        android:id="@+id/relative_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp">

    <TextView
        android:id="@+id/change_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Name"
        android:textColor="#000000"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/name"
        android:layout_below="@+id/change_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shawon"
        android:textSize="12sp"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line_no_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_below="@+id/rl1"
        android:layout_marginStart="76dp"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:id="@+id/rl3"
        android:layout_below="@+id/line_no_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:focusable="true"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_security_black_24dp"
            android:tint="@color/colorStatusBar1"
            android:layout_marginStart="14dp"
            />

        <RelativeLayout
            android:id="@+id/relative_layout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp">

            <TextView
                android:id="@+id/change_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textColor="#000000"
                android:textSize="16sp"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line_no_3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_below="@+id/rl3"
        android:layout_marginStart="76dp"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/rl5"
        android:layout_below="@+id/line_no_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_favorite_black_24dp"
            android:tint="#ffff4444"
            android:layout_marginStart="14dp"
            />

        <RelativeLayout
            android:id="@+id/relative_layout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp">

            <TextView
                android:id="@+id/delete_favourites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete Favourites"
                android:textColor="#000000"
                android:textSize="16sp"/>
            <TextView
                android:layout_below="@+id/delete_favourites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear your favourite foods"
                android:textSize="12sp"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/line_no_4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_below="@+id/rl5"
        android:layout_marginStart="76dp"
        android:layout_marginTop="20dp"/>

    <RelativeLayout
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:id="@+id/rl4"
        android:layout_below="@+id/line_no_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_exit_to_app_black_24dp"
            android:tint="@color/colorStatusBar1"
            android:layout_marginStart="14dp"
            />

        <RelativeLayout
            android:id="@+id/relative_layout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp">

            <TextView
                android:id="@+id/sign_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Out"
                android:textColor="#000000"
                android:textSize="16sp"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
