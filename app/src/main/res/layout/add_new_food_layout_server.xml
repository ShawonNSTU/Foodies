<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="     Please fill up full information about the food"
            android:layout_margin="20dp"
            android:textStyle="bold"
            android:textSize="12sp"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_food_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Food Name"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:inputType="text"
            app:met_baseColor="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_food_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:inputType="textMultiLine"
            app:met_baseColor="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorPrimary"
           />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_food_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Price"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:inputType="text"
            app:met_baseColor="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_food_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Discount"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"
            android:inputType="text"
            app:met_baseColor="@color/colorPrimary"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="@color/colorPrimary"
            app:met_singleLineEllipsis="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <info.hoang8f.widget.FButton
                android:id="@+id/image_select_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:buttonColor="@color/colorAccent"
                android:text="SELECT"
                android:textAllCaps="false"
                app:shadowColor="#000000"
                android:fontFamily="serif"
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                app:cornerRadius="4dp"/>

            <info.hoang8f.widget.FButton
                android:id="@+id/upload_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textColor="#ffffff"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:buttonColor="@color/colorPrimary"
                android:text="UPLOAD"
                android:textAllCaps="false"
                app:shadowColor="#000000"
                android:fontFamily="serif"
                app:shadowEnabled="true"
                app:shadowHeight="5dp"
                app:cornerRadius="4dp"/>


        </LinearLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>

    </LinearLayout>

</ScrollView>